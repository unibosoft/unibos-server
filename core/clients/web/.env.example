# Django settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database (Production default)
DATABASE_URL=postgresql://unibos_db_user:unibos_password@localhost:5432/unibos_db

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-other-domain.com

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@unibos.com

# Admin
ADMIN_EMAIL=admin@unibos.com

# Sentry (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# API Keys (for external services)
TCMB_API_KEY=
COINGECKO_API_KEY=
OPENWEATHER_API_KEY=

# Security
ENVIRONMENT=production

# Celery
CELERY_EAGER=False

# Django settings module
DJANGO_SETTINGS_MODULE=unibos_backend.settings.production

# Logging
DJANGO_LOG_LEVEL=INFO